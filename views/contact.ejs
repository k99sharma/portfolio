<!-- header -->
<%- include('partials/header.ejs') %>

<!-- navbar -->
<%- include('partials/navbar.ejs') %>

<!-- main-content -->
<section class="container" id="contact-container">
    
    <div class="row px-2">
        <div class="col-12 col-md-6">
            <h1 class="py-4">Get in touch</h1>
        </div>

        <div class="col-12 col-md-6">
            <!-- contact form -->
            <form class="row g-3 py-5" action="/ghost_32/contact" method="POST" autocomplete="off">

                <!-- first name -->
                <div class="col-12 col-md-6 mb-2">
                    <label for="firstname" class="form-label">First Name<span class="redLabel">*</span></label>
                    <input class="form-control" type="text" id="firstname" name="firstname" placeholder="First Name" required>
                </div>

                <!-- last name -->
                <div class="col-12 col-md-6 mb-2">
                    <label for="lastname" class="form-label">Last Name<span class="redLabel">*</span></label>
                    <input class="form-control" type="text" id="lastname" name="lastname" placeholder="Last Name" required>
                </div>

                <!-- email address -->
                <div class="col-12 mb-2">
                    <label for="email" class="form-label">Email<span class="redLabel">*</span></label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="example@email.com" required>
                </div>

                <!-- message -->
                <div class="col-12 mb-2">
                    <label for="message" class="form-label">Message<span class="redLabel">*</span></label>
                    <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                </div>

                <div class="d-grid gap-2 d-md-block">
                    <button class="btn blackButton" type="submit">Submit</button>    
                </div>
            </form>
        </div>
    </div>

</section>


<!-- newsletter -->
<%- include('partials/newsletter.ejs') %>

<!-- footer -->
<%- include('partials/footer.ejs') %>